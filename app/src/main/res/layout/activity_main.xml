<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pixel.mas.ishara.telepresence.MainActivity">

    <TextView
        android:id="@+id/z_view"
        android:layout_width="108dp"
        android:layout_height="47dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="22dp"
        android:text="Z"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/y_view"
        app:layout_constraintTop_toBottomOf="@+id/btn_discon" />

    <Button
        android:id="@+id/btn_bluetooth"
        android:layout_width="98dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="148dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="148dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="Find Pairs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/blu_list"
        android:layout_width="306dp"
        android:layout_height="298dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="39dp"
        android:layout_marginStart="39dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/btn_discon"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:text="Disconnect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toEndOf="@+id/btn_bluetooth"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/x_view"
        android:layout_width="108dp"
        android:layout_height="47dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:text="X"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/y_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_bluetooth" />

    <TextView
        android:id="@+id/y_view"
        android:layout_width="108dp"
        android:layout_height="47dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="86dp"
        android:text="Y"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/z_view"
        app:layout_constraintStart_toEndOf="@+id/x_view"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_stream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="16dp"
        android:text="Open Stream"
        app:layout_constraintBottom_toTopOf="@+id/y_view"
        app:layout_constraintEnd_toStartOf="@+id/btn_discon"
        app:layout_constraintStart_toEndOf="@+id/btn_bluetooth"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
